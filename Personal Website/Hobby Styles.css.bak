/* Fonts: */
@font-cons {
    font-family: Consolas;
    src: url(Consolas.ttf);
}

@font-secr {
    font-family: Secret Code;
    src: url(secrcode.ttf);
}

/* Navigation Bar: */
ul {
    list-style-type: none;
    color: #FAF2ED;
    margin-top: 0px;
    margin-left: 20px;
    margin-right: 20px;
    overflow: hidden;
    background-color: rgba(0, 0, 0, 0.8);
    font-family: Bahnschrift;
    text-transform: lowercase;
}

li a {
    display: block;
    color: white;
    text-align: center;
    padding: 16px;
    text-decoration: none;
}

li a:hover{
	color:#00FFFF;
    transition:transform 0.25s ease;
    transform:scale(1.25);
}

li {
    float: left;
}

/* Background: */
body 
{
	background-image: url("background3.jpg");
	height:100%;
	background-position: top;
	background-repeat: repeat;
	background-size: cover;
}

/* Text formatting: */
.heads {
    background-color: rgba(0, 0, 0, 0.9);
    margin-left: 20px;
    width: 1500px;
    padding: 2px;
}

.top {
	background-color: rgba(0, 0, 0, 0.7);
	width: 777px;
	margin-left: auto;
	margin-right: auto;
	height:140px;
}

p {
	font-family: Consolas;
}

.boxtext {
    background-color: rgba(0, 0, 0, 0.6);
	margin-left: 40px;
	padding: 1px;
	width: 1400px;
}

/* Image zoom on hover: */
img:hover {
	transition:transform 0.55s ease;
    transform:scale(1.5);
}


/* Links Recolour:*/
.boxtext a {
	font-family: Bahnschrift;
    text-decoration: none;
	color: cyan;
}

.boxtext a:hover {
	color: #FFFF00;
    transition:transform 0.25s ease;
    transform:scale(1.25);
}

/* Scrolling/Maintenance:*/
html {
  scroll-behavior: smooth;
  height: 100%;
  width: 100%;
}

/* Fading:*/
.fadein {
    animation: fadeIn .5s ease-in;
}

.fadeout {
    transition: opacity .5s;
    opacity: 0;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}